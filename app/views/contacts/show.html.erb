<div class="page-header">
  <%= link_to contacts_path, class: 'btn btn-warning' do %>
    All Contacts
  <% end %>

  <%= link_to edit_contact_path(@contact), class: 'btn btn-primary' do %>
    Edit
  <% end %>

  <%= link_to 'Call', contact_calls_path(@contact), class: 'btn btn-primary', method: :post, remote: :true %>

  <h1><%= @contact.name.full %></h1>
</div>

<dl class="dl-horizontal">
  <dt>First name:</dt>
  <dd><%= @contact.first_name %></dd>

  <dt>Last name:</dt>
  <dd><%= @contact.last_name %></dd>

  <dt>Title:</dt>
  <dd><%= @contact.title %></dd>

  <dt>Company name:</dt>
  <dd><%= @contact.company_name %></dd>

  <dt>Phone number:</dt>
  <dd><%= @contact.phone_number %></dd>

  <dt>Email address:</dt>
  <dd><%= @contact.email_address %></dd>
</dl>

<div class="current-call"></div>
