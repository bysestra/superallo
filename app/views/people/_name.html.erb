<h2 class="d-flex align-items-center avatarable mb-0">
  <%= image_tag person.avatar_url, class: "circle mr-2 d-none d-sm-block" %>
  <% if person.title.present? && !skip_title %>
    <%= "#{person.name.full}, #{person.title}" %>
  <% else %>
    <%= person.name.full %>
  <% end %>

  <%= yield if block_given? %>
</h2>
